.contain-to-grid.fixed
  nav.top-bar
    ul.title-area
      li.name
        h1: a(href="/") SouthernGreetings
      li.toggle-topbar.menu-icon
        a(href="#")
          span Menu

    section.top-bar-section
      ul.left
        if user
          li.nav: a(href="/create") Create Cards
          li.nav: a(href="/view-cards") View Cards
      ul.right
        li.divider
        if user
          li.has-form: a#authentication-button.button.radius.alert(href="#", data-email="#{user.email}") Logout
        else
          li.has-form: a#authentication-button.button.radius(href="#", data-email="anonymous") Login | Sign Up