extends ../template/layout

block content
  .row
    .small-12.columns
      #container
        h1 Southern Greetings
        .row
          .small-6.columns
            h4.slogan Seasons Greetings Southern Style
          .small-6.columns
        .row
          .small-12.columns
            #step1
              h3 Step
              #step-no-1
        .row
          .small-6.columns
            p Design the front of your postcard.
        .row
          .small-12.columns
            .border-top
        .row
          .small-6.small-offset-3.columns
            p Choose your city and state.
        .row
          .small-3.small-offset-3.columns
            input#city(type='text' placeholder='City' required='true')
          .small-3.columns
            select#states
              option(selected='selected' value='default') State
              option(value='Alabama') AL
              option(value='Florida') FL
              option(value='Georgia') GA
              option(value='Kentucky') KY
              option(value='Mississippi') MS
              option(value='North Carolina') NC
              option(value='South Carolina') SC
              option(value='Tennessee') TN
              option(value='Virginia') VA
              option(value='West Virginia') WV
          .small-3.columns
        .row
          .small-6.small-offset-3.columns
            p Choose the background pattern.
        .row
          .small-12.columns
            #backgrounds-container
              #pattern1.border
              #pattern2.border

        .row
          .small-12.columns
            .center
              input#preview-front(type='button' value='Preview')
        .row
          .small-12.columns
            #front-card.hidden
              h2 Greetings from
        .row
          .small-12.columns
            .center
              input#submit-front.hidden(type='button' value='SUBMIT')
        .row
          .small-12.columns
            .bottom