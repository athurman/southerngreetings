extends ../template/layout

block content
  .row
    .small-12.columns
      #container
        h1 Southern Greetings
        .row
          .small-6.columns
            h4.slogan Seasons Greetings Southern Style
          .small-6.columns
        .row
          .small-12.columns
            #step1
              h3 Step
              #step-no-1
        .row
          .small-6.columns
            p Design the front of your postcard.
        .row
          .small-12.columns
            .border-top
        .row
          .small-6.small-offset-3.columns
            p Choose your city and state.
        .row
          .small-3.small-offset-3.columns
            input(type='text' placeholder='City' required='true')
          .small-3.columns
            select#states
              option(selected='selected' value='default') State
              option(value='Alabama') Alabama
              option(value='Florida') Florida
              option(value='Georgia') Georgia
              option(value='Kentucky') Kentucky
              option(value='Mississippi') Mississippi
              option(value='North Carolina') North Carolina
              option(value='South Carolina') South Carolina
              option(value='Tennessee') Tennessee
              option(value='Virginia') Virginia
              option(value='West Virginia') West Virginia
          .small-3.columns
        .row
          .small-6.small-offset-3.columns
            p Choose the background pattern.
        .row
          .small-12.columns
            #backgrounds-container
            #front-card
        .row
          .small-12.columns