extends ../template/layout

block content
  if user
    .row
      .small-12.columns
        #container
          h1 SouthernGreetings
          .row
            .small-6.columns
              h4.slogan Seasons Greetings, Southern Style
            .small-6.columns
          .row
            .small-12.columns
              #step1
                h3 Step
                #step-no-1
          .row
            .small-6.columns
              p Design the front of your postcard.
          .row
            .small-12.columns
              .border-top
          .row
            .small-6.small-offset-3.columns
              p Choose your city and state.
          .row
            .small-3.small-offset-3.columns
              input#city(type='text' placeholder='City' required='true')
            .small-3.columns
              select#states
                option(selected='selected' value='default') State
                option(value='AL') AL
                option(value='AK') AK
                option(value='AZ') AZ
                option(value='AR') AR
                option(value='CA') CA
                option(value='CO') CO
                option(value='CT') CT
                option(value='DE') DE
                option(value='DC') DC
                option(value='FL') FL
                option(value='GA') GA
                option(value='HI') HI
                option(value='ID') ID
                option(value='IL') IL
                option(value='IN') IN
                option(value='IA') IA
                option(value='KS') KS
                option(value='KY') KY
                option(value='LA') LA
                option(value='ME') ME
                option(value='MD') MD
                option(value='MA') MA
                option(value='MI') MI
                option(value='MN') MN
                option(value='MS') MS
                option(value='MO') MO
                option(value='MT') MT
                option(value='NE') NE
                option(value='NV') NV
                option(value='NH') NH
                option(value='NJ') NJ
                option(value='NM') NM
                option(value='NY') NY
                option(value='NC') NC
                option(value='ND') ND
                option(value='OH') OH
                option(value='OK') OK
                option(value='OR') OR
                option(value='PA') PA
                option(value='RI') RI
                option(value='SC') SC
                option(value='SD') SD
                option(value='TN') TN
                option(value='TX') TX
                option(value='UT') UT
                option(value='VT') VT
                option(value='VA') VA
                option(value='WA') WA
                option(value='WV') WV
                option(value='WI') WI
                option(value='WY') WY
            .small-3.columns
          .row
            .small-6.small-offset-3.columns
              p Choose the text color.
          .row
            .small-2.small-offset-5.columns
              input#color(type='text' class='color {required:false, hash:true, pickerMode:"HSV"}' value="000000")
          .row
            .small-6.small-offset-3.columns
              p Choose the background pattern.
          .row
            .small-12.columns
              #backgrounds-container
                #pattern1.border
                #pattern2.border
                #pattern3.border
          .row
            .small-2.small-offset-5.columns
              button#preview-front.radius.expand Preview
            .small-5.columns
          .row
            .small-12.columns
              #front-card.hidden
                h2 Greetings from
          .row
            .small-12.columns
              #choose-flag.hidden
                h3 Choose Flage Icon
                .small-container
                  #flag1
                  #flag2
                  #flag3
                  .clear
          .row
            .small-2.small-offset-5.columns
              button#submit-front.radius.expand.hidden Submit
            .small-5.columns
          .row
            .small-12.columns
              .border-bottom
          .row
            .small-12.columns
              .bottom
  else
    .row
      .small-12.columns
        #container
          h1 SouthernGreetings
          .row
            .small-6.columns
              h4.slogan Seasons Greetings, Southern Style
            .small-6.columns
          .row
            .small-12.columns
              h4.login Sorry, you must be logged in to create cards!
